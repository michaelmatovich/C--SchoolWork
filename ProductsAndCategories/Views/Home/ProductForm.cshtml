@{
    ViewData["Title"] = "Home Page";
}

@model Product

<div class = "text-center">
    <h2>Products | <a href="categories">Categories</a></h2>
</div>

<div class = "d-flex text-center mt-3">
    <div class = "col-6 mt-5">
        <h3>New Product</h3>
        <br>        
        <form action = "/product/process" method = "POST">
            <div class = "form-group mt-5">
                <label for="Name">Name</label>
                <input asp-for="Name" class = "form-control">
                <span asp-validation-for = "Name" class = "text-danger mb-3"></span>
            </div>
            <div class = "form-group">
                <label for="Description">Description</label>
                <input asp-for="Description" class = "form-control">
                <span asp-validation-for = "Description" class = "text-danger mb-3"></span>
            </div>        
            <div class = "form-group">
                <label for="Price">Price</label>
                <input asp-for="Price" class = "form-control">
                <span asp-validation-for = "Price" class = "text-danger mb-3"></span>
            </div>            
            <div class = "form-group mt-5">
                <input type="submit" value="Add Product" class = "btn btn-info">
            </div>
        </form> 
    </div>
    
    <div class = "col-6 mt-5">
        <h3 class = "mb-5">Existing Products</h3>
        @{
            foreach (var p in ViewBag.Products)
            {
                <div><a href = "/products/@p.ProductId">@p.Name</a></div>
            }
        }
    </div>
</div>