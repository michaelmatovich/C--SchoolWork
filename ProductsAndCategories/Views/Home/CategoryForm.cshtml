@{
    ViewData["Title"] = "Home Page";
}

@model Category

<div class = "text-center">
    <h2><a href = "products">Products </a>| Categories</h2>
</div>

<div class = "d-flex text-center mt-3">
    <div class = "col-6 mt-5">
        <h3>New Category</h3>
        <br>        
        <form action = "/category/process" method = "POST">
            <div class = "form-group mt-5">
                <label for="Name">Name</label>
                <input asp-for="Name" class = "form-control">
                <span asp-validation-for = "Name" class = "text-danger mb-3"></span>
            </div>
            <div class = "form-group mt-5">
                <input type="submit" value="Add Category" class = "btn btn-info">
            </div>
        </form> 
    </div>

    <div class = "col-6 mt-5">
        <h3 class = "mb-5">Existing Categories</h3>
        @{
            foreach (var c in ViewBag.Categories)
            {
                <div><a href = "/category/@c.CategoryId">@c.Name</a></div>
            }
        }
    </div>
    
</div>