@{
    ViewData["Title"] = "Home Page";
}

@model User

<div class = "d-flex justify-content-between mb-5">
    <h1>Register for Wedding Planner</h1>
    <a href="/Login">Login</a>
</div>

<div class = "d-flex justify-content-center">
<div class="text-center col-6">
    <form action = "/new/process" method ="post">
        <div class="form-group">
            <label for="FirstName">First Name:</label>
            <input asp-for = "FirstName" class = "form-control">
            <span asp-validation-for="FirstName" class = "text-danger mb-3"></span>
        </div>
        <div class="form-group">
            <label for="LastName">Last Name:</label>
            <input asp-for = "LastName" class = "form-control">
            <span asp-validation-for="LastName" class = "text-danger mb-3"></span>
        </div>
        <div class="form-group">
            <label for="Email">Email:</label>
            <input asp-for = "Email" class = "form-control">
            <span asp-validation-for="Email" class = "text-danger mb-3"></span>
        </div>
        <div class="form-group">
            <label for="Password">Password:</label>
            <input asp-for = "Password" class = "form-control">
            <span asp-validation-for="Password" class = "text-danger mb-3"></span>
        </div>
        <div class="form-group">
            <label for="PassConfirm">Confirm Password:</label>
            <input asp-for = "PassConfirm" class = "form-control">
            <span asp-validation-for="PassConfirm" class = "text-danger mb-5"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Sign up Now" class = "btn btn-info mt-3">
        </div>
    </form>
</div>
</div>
