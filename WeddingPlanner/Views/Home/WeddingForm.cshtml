@{
    ViewData["Title"] = "Home Page";
}

@model Wedding

<div class = "d-flex justify-content-between mb-5">
    <h1>Plan Your Wedding</h1>
    <a href="/Home/Success">Dashboard</a>
    <a href="/Logout">Logout</a>
</div>

<div class = "d-flex justify-content-center">
<div class="text-center col-6">
    <form action = "/wedding/new/process" method ="post">
        <div class="form-group">
            <label for="WedderOne">Wedder One:</label>
            <input asp-for = "WedderOne" class = "form-control">
            <span asp-validation-for="WedderOne" class = "text-danger mb-3"></span>
        </div>
        <div class="form-group">
            <label for="WedderTwo">Wedder Two:</label>
            <input asp-for = "WedderTwo" class = "form-control">
            <span asp-validation-for="WedderTwo" class = "text-danger mb-3"></span>
        </div>
        <div class="form-group">
            <label for="Date">Date:</label>
            <input asp-for = "Date" class = "form-control">
            <span asp-validation-for="Date" class = "text-danger mb-3"></span>
        </div>
        <div class="form-group">
            <label for="Address">Address:</label>
            <input asp-for = "Address" class = "form-control">
            <span asp-validation-for="Address" class = "text-danger mb-3"></span>
        </div>        
        <div class="form-group">
            <input type="submit" value="Create Wedding" class = "btn btn-primary mt-3">
        </div>
    </form>
</div>
</div>