@model Dish

<h1 class = "text-center">Edit your Dish!</h1>
<a href="/">Home</a>
<br>
<div class="text-center">
    <form action = "/edit/process/@Model.DishId" method ="post">
        <div class="form-group">
            <label for="Chef">Chef's Name</label>
            <input asp-for = "Chef" class = "form-control mb-2">
        </div>
        <div class="form-group">
            <label for="Name">Name of Dish</label>
            <input asp-for = "Name" class = "form-control mb-2">
        </div>
        <div class="form-group">
            <label for="Tastiness">Tastiness</label>
            <input asp-for = "Tastiness" class = "form-control mb-2">
        </div>
        <div class="form-group">
            <label for="Calories"># of Calories</label>
            <input asp-for = "Calories" class = "form-control mb-2">
        </div>
        <div class="form-group">
            <label for="Description">Description</label>
            <input asp-for = "Description" class = "form-control mb-2">
        </div>
        <div class="form-group">
            <input type="submit" value="Edit" class = "btn-btn-primary">
        </div>
    </form>
</div>