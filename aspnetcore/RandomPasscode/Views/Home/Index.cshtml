@{
    ViewData["Title"] = "Home Page";
}

<p class = "text-center">Random passcode passcode #<span id = "span_ct">@Context.Session.GetInt32("Count")</span></p>
<p class = "text-center">Passcode: <span id = "span_pc">@Context.Session.GetString("Passcode")</span></p>

<div class = "text-center">
    <button class = "btn btn-success" onclick = generate()>Generate</button>
</div>

<script>

async function generate()
{
    let spanCounter = document.getElementById("span_pc");

    let spanPasscode= document.getElementById("span_ct")

    let result = await (await fetch ("GetPassword")).json();

    spanCounter.innerText = result.password;

    spanPasscode.innerText = result.counter;
}
</script>

